.topImg {
  max-height: 108px;
}
.topImg image {
  width: 100%;
  max-height: 102px;
  -webkit-box-shadow:0 2px 2px #CCC;
  box-shadow: 0 2px 2px #CCC;
}
.flex2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10px;
}
.flex2 .rows {
  padding: 0 10px 0 0;
}
.flex2 .rows:last-child {
  padding-left: 10px;
  border-left: 1px solid #ededed;
  position: relative;
  width: 43%;
}
.arrow-box{
  position:absolute;
  right: 10px;
  top: 30%;
}
.right{
    width:20px;
    height:20px;
    position:absolute;
    left:0;
    top:0;
}
.right-arrow1,.right-arrow2{
    width:0;
    height:0;
    display:block;
    position:absolute;
    left:0;
    top:0;
    border-top:8px transparent dashed;
    border-right:8px transparent dashed;
    border-bottom:8px transparent dashed;
    border-left:8px white solid;
    overflow:hidden;
}
.right-arrow1{
    left:1px;/*重要*/
    border-left:8px #fea758 solid;
}
.right-arrow2{
    border-left:8px white solid;
}
.rows .field-title {
  font-size: .875rem;
}
.rows .field-txt {
  font-size: .725rem;
  color: #999;
}
.rows.active {
  color: #fea758;
}
.rows.active .field-txt {
  color: #ffcea2;
}
.textarea-box {
  padding: 0 10px 5px;
  background-color: #fff;
  position: relative;
  overflow: hidden;
}
.textarea-box .comments {
  width: 100%;
  border: none;
  font-size: 0.725rem;
  -webkit-appearance: none;
  overflow:auto;  
  word-break:break-all;
  height: 60px;
  position: relative; 
  z-index: 0;
}
label.checkbox {
  font-size: .625rem;
  color: #959595;
  float: right;
  height: 20px;
  position: relative;
}
wx-input.normal {
  border:1px solid #d1d1d1;
  width:15px;
  height:15px !important;
  min-height: auto !important;
  border-radius:50%;
  float: left;
  margin: 0 3px 0 0;
  color: #fff;
}
wx-input.isChecked {
  border:1px solid #fea758;
  width:15px;
  height:15px !important;
  min-height: auto !important;
  border-radius:50%;
  float: left;
  margin: 0 3px 0 0;
  color: #fff;
  position: relative;
}
.isChecked::after {
  content: "\2713";
  color: #fea758;
  font-size: 15px;
  position: absolute;
  left:3px;
  top: -5px;
  z-index: 10;
}
.label-text {
    display: inline-block;
    vertical-align: middle;
    color: #999;
    font-size: 0.675rem;
}
.wx-checkbox-input.wx-checkbox-checked-input:before {
    color: #fea758;
    font-size: 16px;
    left: 48%;
}
checkbox-group checkbox .wx-checkbox-input {
  border:1px solid #d1d1d1;
  width:14px;
  height:14px;
  border-radius:50%;
  float:left;
  margin-right:3px;
}

checkbox-group {
  overflow: hidden;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #fea758 !important;
  color: #fea758 !important;
}
wx-input.anonymous {
  border:1px solid #d1d1d1; 
  width:15px;
  height:15px !important;
  min-height: auto !important;
  border-radius:50%;
  float:left;
  margin-right:3px;
  color: #fff;
}
.text-box {
  background-color: #fff;
  border-top: 1px solid #ededed;
  padding: 10px;
}
.text-box input {
  height: 28px;
  line-height: 28px;
  font-size: .725rem;
  border-bottom: 1px solid #ededed;
}
.exp-title {
  float: left;
  font-size: .875rem;
  color: #fea758;
  width: 40px;
  padding-top: 3px;
}
.exp-tags {
  margin-left: 40px;
}
.field-t {
  position: relative;
}
.field-t navigator {
  width: 100%;
  height: 40px;
  position: absolute;
  left: 0; 
  top: -5px;
}
.field-t image {
  width: 24px;
  height: 24px;
  float: left;
  font-size: .875rem;
  margin-right: 3px;
}
.paymoney {
  color: #999;
  font-size: .725rem;
  padding-top: 10px;
}
.paymoney .number {
  color: #fea758;
  text-decoration: underline;
}
.rules {
  float:right;
  width:60px;
  height:30px;
}