/**score.wxss**/
.container {
  background: url(https://www.luckymp.com/Public/Home/images/lucky_bg.jpg) no-repeat;
  background-size: 100%;
}
.lucky_bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  background-color: #fff;
  font-size: 16px;
  color: #fff;
  text-align: center;
  border-radius: 0;
}
.lucky_detail {
  color: #fff;
  font-size: 0.875rem;
}
.lucky_field {
  min-height: 4.2rem;
}
.lucky_tag {
  position: relative;
  display: inline-block;
  padding:1px 8px 2px;
  border: 1px solid #fff;
  border-radius: 5px;
  color: #fff;
  font-size: 0.9rem;
}
.lucky_score {
  position: absolute;
  background: url(https://www.luckymp.com/Public/Home/images/icon_a.png) no-repeat;
  background-size: 4.5rem;
  width:4.5rem;
  height:4.5rem;
  right:-1rem;
  top:-0.25rem;
  text-align:center;
  font-size:2rem;
  color: #fff;
}
.lucky_score span {
  transform:rotate(-35deg);
  display:inline-block;
  text-align:center;
  padding:0.15rem 0.6rem 0 0;
}
.score_box {
  float: left;
  width: 75%;
}
.score_btn {
  float: right;
  width: 25%;
  border-radius: 0;
  background-color: #684932;
  color: #fff;
  font-size: 0.875rem;
  line-height: 42px;
}