/**index.wxss**/
.container {
  background: url(http://www.luckymp.com//Public/Home/images/lucky_bg2.jpg) no-repeat;
  background-size: 100%;
}
.lucky_save {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  background-color: #684932;
  font-size: 16px;
  color: #fff;
  text-align: center;
  border-radius: 0;
}
.lucky_detail {
  color: #fff;
  font-size: 0.875rem;
}
.lucky_field {
  min-height: 4.2rem;
}
.lucky_tag {
  position: relative;
  display: inline-block;
  padding:1px 8px 2px;
  border: 1px solid #fff;
  border-radius: 5px;
  color: #fff;
  font-size: 1rem;
}
.lucky_score {
  position: absolute;
  background: url(http://www.luckymp.com//Public/Home/images/icon_a.png) no-repeat;
  background-size: 4.5rem;
  width:4.5rem;
  height:4.5rem;
  right:-1rem;
  top:-0.25rem;
  text-align:center;
  font-size:2rem;
  color: #fff;
}
.lucky_score span {
  transform:rotate(-35deg);
  display:inline-block;
  text-align:center;
  padding:0.15rem 0.6rem 0 0;
}
.qrcode {
  position: fixed;
  left: 50%;
  bottom: 3.5rem;
  width: 5rem;
  height: 5rem;
  margin-left: -2.5rem;
  -webkit-box-shadow:0 3px 5px #aaa;
  box-shadow: 0 3px 5px #aaa;
}
.qrcode image {
  width: 5rem;
  height: 5rem;
}
.hide {
  display: none;
}