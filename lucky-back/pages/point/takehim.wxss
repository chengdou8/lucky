.mylucky-sex image {
  width: 18px;
  height: 18px;
  margin-left: 10px;
  margin-top: 10px;
  position: relative;
  top: 5px;
}
.lucky-img image {
  border:1px solid #eee;
}
.lucky-article {
  margin: 0;
  min-height: auto;
  text-align: center;
  position: relative;
  z-index: 6;
  color: #fff;
}
.lucky-topbg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: 0 -80px;
}
.mark-row {
  background-color: #fff;
  padding:10px 15px;
  border-bottom: 1px solid #efefef;
}
.mark-row .branch {
  display: inline-block;
  font-size: .625rem;
  padding: 2px 0 0 5px;
  vertical-align: middle;
  border: none;
}
.lucky-tips {
  font-size: .625rem;
  color: #959595;
  float: right;
  padding-top: 5px;
}
.qustion {
  font-size: .75rem;
  padding: 2px 0 6px;
  color:#666;
  text-align:center;
}
.lucky-content {
  padding: 10px 15px;
}
.lucky-area {
  background-color: #fff;
  border: 1px solid #efefef;
  border-radius: 5px;
  min-height: 180px;
  width: 100%;
  padding: 10px;
  font-size: .75rem;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box; 
  -o-box-sizing: border-box;
  -ms-box-sizing: border-box;
  box-sizing: border-box;
}
.answer-btn {
  width:100%;
  padding:2px 0;
  margin-top:10px;
  font-size: .875rem;
}
.btn-group {
  position: relative;
}
.btn-group image {
  width:32px;
  height:32px;
  position:absolute;
  left:43%;
  top:25px;
}
.paymoney {
  color: #ff5555;
  font-size: .725rem;
  padding-top: 10px;
}
.lucky-img {
  float: none;
  margin: 0 auto;
  position: relative;
  z-index: 5;
}
