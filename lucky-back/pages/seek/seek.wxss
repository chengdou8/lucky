/* pages/seek/seek.wxss */
.swiper-tab{  
  width: 100%;
  text-align: center;  
  line-height: 80rpx;
  -webkit-box-shadow:0 1px 1px #CCC;
  box-shadow: 0 1px 1px #CCC;
}  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 50%;  
    color: #777777;
    -webkit-box-shadow:-1px 0 1px #ccc;
    box-shadow: -1px 0 1px #ccc;
}
.on { 
  color: #fea758;
  background-color: #fff;
}  
  
.swiper-box { 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}  
.seekImg image {
  width: 100%;
  max-height: 102px;
}
.seek-list {
  background-color: #fff;
  padding: 10px 15px;
  overflow: hidden;
}
.seek-row .seek-amount {
  color: #fea758;
  font-size: .675rem;
  float: right;
  padding-top: 5px;
}
.seek-row .seek-title {
  font-size: .725rem;
  color: #fea758;
  padding-right: 10px;
  border-right: 1px solid #fea758;
  margin-right: 10px;
}
.seek-content {
  font-size: .725rem;
}
.seek-row .seek-time {
  font-size: 12px;
  color: #999;
}
.seek-row .btn {
  float: right;
  padding: 2px 15px;
  font-size: .625rem;
}
.seek-img {
  float: left;
  width:60px;
  height:60px;
  line-height:60px;
  text-align:center;
  background-color: #eee;
  border-radius: 50%;
  -webkit-box-shadow:0 3px 3px #bbb;
  box-shadow: 0 3px 3px #bbb;
}
.seek-img image {
  width: 100%;
  height: 100%;
  vertical-align: top;
  border-radius: 50%;
}
.seek-article {
  margin-left: 70px;
  min-height: 65px;
}
.seekCon {
  font-size: .75rem;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;      
  -webkit-box-orient: vertical;
}
/*loading*/
.sk-three-bounce {
  text-align:center;
  padding:10px 0;
  background-color:#fff;
  height:20px;
 }
.sk-three-bounce .sk-child {
  width: 20px;
  height: 20px;
  background-color: #fea758;
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: sk-three-bounce 1.4s ease-in-out 0s infinite both;
          animation: sk-three-bounce 1.4s ease-in-out 0s infinite both; 
}
.sk-three-bounce .sk-bounce1 {
  -webkit-animation-delay: -0.32s;
          animation-delay: -0.32s; 
}
.sk-three-bounce .sk-bounce2 {
  -webkit-animation-delay: -0.16s;
          animation-delay: -0.16s; 
}
.sky-text {
  position: relative;
  top: -5px;
  padding-left: 5px;
  font-size: .75rem;
  color: #777;
}

@-webkit-keyframes sk-three-bounce {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
            transform: scale(0); }
  40% {
    -webkit-transform: scale(1);
            transform: scale(1); } }

@keyframes sk-three-bounce {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
            transform: scale(0); }
  40% {
    -webkit-transform: scale(1);
            transform: scale(1); } }
.imgList {
  display: flex;
  flex-direction: row;
}
.imgList .imgItem {
  display: inline-flex;
  height: auto;
  flex-grow: 1;
  padding: 5px 0;
}
.imgList .imgItem:nth-child(2),.imgList .imgItem:nth-child(3),.imgList .imgItem:nth-child(4) {
  padding-left: 2%;
}
.imgItem image {
  width: 100%;
  height: 105px;
}