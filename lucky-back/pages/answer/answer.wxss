.answer-share {
  height: 35px;
  line-height: 35px;
  color: #fff;
  background-color: #fea758;
  padding:  0 15px;
  font-size:.75rem;
}
.lucky-money {
  position: absolute;
  right: 15px;
  top: 20px;
  color: #fea758;
}
.lucky-money image {
  width: 25px;
  height: 25px;
  float: left;
}
.answer {
  background-color: #fff;
  padding: 15px;
  font-size: .725rem;
  border-bottom: 1px solid #efefef;
}
.answert {
  padding-bottom: 10px;
}
.answer .orange {
  padding: 0 5px;
}
.commentlist {
  margin-top: 10px;
  border-top: 1px solid #efefef;
}
.commentitem {
  background-color: #fff;
  border-bottom: 1px solid #efefef;
  padding: 10px 15px;
  overflow: hidden;
}
.comments-article {
  margin-left: 40px;
}
.comments-time {
  float: right;
  color: #bbb;
  font-size: .725rem;
}
.comments-img {
  float:left;
  width:30px;
  height:30px;
  line-height:30px;
  text-align:center;
  background-color:#eee;
  border-radius:50%;
  -webkit-box-shadow:0 3px 3px #bbb;
  box-shadow:0 3px 3px #bbb;
}
.comments-img image {
  width:100%;
  height:100%;
  vertical-align:top;
  border-radius:50%;
}
.arcticle-content {
  clear:both;
  padding-top:5px;
  color: #666;
  font-size: .75rem
}
.inputbox {
  float: left;
  width:70%;
  padding:7px 2.5%;
}
.lucky-input {
  width: 100%;
  height: 30px !important;
 font-size: .75rem;
}
.share {
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  z-index: 101;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  text-align: right;
}
.share image {
  width: 240px;
  height: 220px;
}